  {
    "extends": ["config:recommended"],
    "schedule": ["before 6am on monday"],
    "labels": ["dependencies"],
    "separateMinorPatch": false,
    "packageRules": [
      {
        "matchManagers": ["gomod"],
        "matchFileNames": [
          "go.mod",
          "pkg/trace/go.mod",
          "pkg/gohai/go.mod",
          "pkg/obfuscate/go.mod",
          "pkg/security/secl/go.mod",
          "pkg/networkdevice/profile/go.mod"
        ],
        "labels": [
          "dependencies",
          "dependencies-go",
          "changelog/no-changelog"
        ],
        "matchPackageNames": [
          "!/^k8s\\.io/",
          "!/^github\\.com/cihub/seelog$/",
          "!/^github\\.com/spf13/cast$/",
          "!/^github\\.com/DataDog/datadog-agent/",
          "!/^golang\\.org/x/",
          "!/^go\\.opentelemetry\\.io/collector/",
          "!/^github\\.com/open-telemetry/opentelemetry-collector-contrib/",
          "!/^github\\.com/mailru/easyjson$/"
        ],
        "groupName": "go-dependencies-main",
        "groupSlug": "go-deps-main"
      },
      {
        "matchManagers": ["gomod"],
        "matchFileNames": ["internal/tools/go.mod"],
        "labels": [
          "dependencies",
          "dependencies-go",
          "dependencies-go-tools",
          "dev/tooling",
          "changelog/no-changelog",
          "qa/no-code-change"
        ],
        "schedule": ["before 6am on the first day of the month"],
        "matchPackageNames": ["!/^golang\\.org/x/"],
        "groupName": "go-tools",
        "groupSlug": "go-tools"
      },
      {
        "matchManagers": ["gomod"],
        "matchFileNames": ["test/new-e2e/go.mod", "test/fakeintake/go.mod"],
        "labels": [
          "dependencies",
          "dependencies-go",
          "changelog/no-changelog",
          "qa/no-code-change",
          "dev/testing"
        ],
        "matchPackageNames": [
          "!/^github\\.com/DataDog/test-infra-definitions$/",
          "!/^github\\.com/pulumi/",
          "!/^golang\\.org/x/"
        ],
        "groupName": "go-test-dependencies",
        "groupSlug": "go-test-deps"
      },
      {
        "matchManagers": ["gomod"],
        "matchPackageNames": ["/^github\\.com/twmb/franz-go/"],
        "groupName": "franz-go"
      },
      {
        "matchManagers": ["gomod"],
        "matchPackageNames": ["/^github\\.com/uptrace/bun/"],
        "groupName": "bun"
      },
      {
        "matchManagers": ["gomod"],
        "matchPackageNames": ["/^github\\.com/aws/aws-sdk-go-v2/"],
        "groupName": "aws-sdk-go-v2"
      },
      {
        "matchManagers": ["gomod"],
        "matchPackageNames": ["/^k8s\\.io/"],
        "groupName": "k8s-io"
      }
    ]
  }
